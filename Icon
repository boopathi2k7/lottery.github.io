import React from 'react';
import { render, screen, fireEvent } from '@testing-library/react';
import HierarchyPopup from './HierarchyPopup'; // Adjust path as needed

describe('HierarchyPopup', () => {
  const mockSendData = jest.fn();
  const mockOnCancel = jest.fn();

  const props = {
    title: 'Select User',
    sendData: mockSendData,
    onCancel: mockOnCancel,
  };

  beforeEach(() => {
    jest.clearAllMocks();
  });

  it('renders with title', () => {
    render(<HierarchyPopup {...props} />);
    expect(screen.getByText(/select user/i)).toBeInTheDocument();
  });

  it('handles Select button click', () => {
    render(<HierarchyPopup {...props} />);
    const selectButton = screen.getByRole('button', { name: /select/i });
    fireEvent.click(selectButton);

    expect(mockSendData).toHaveBeenCalled();
    expect(mockOnCancel).toHaveBeenCalled();
  });

  it('handles Cancel button click', () => {
    render(<HierarchyPopup {...props} />);
    const cancelButton = screen.getByRole('button', { name: /cancel/i });
    fireEvent.click(cancelButton);

    expect(mockOnCancel).toHaveBeenCalled();
  });
});
