                    onMouseEnter={() => handleMouseEnter(item.id)}
                  >
                    <button 
                      className={`px-3 py-4 text-sm font-medium hover:text-blue-600 transition-colors duration-200 flex items-center ${activeMenu === item.id ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-700'}`}
                    >
                      {item.label}
                      <svg 
                        className={`ml-1 h-4 w-4 transition-transform duration-200 ${activeMenu === item.id ? 'rotate-180 text-blue-600' : 'text-gray-500'}`} 
