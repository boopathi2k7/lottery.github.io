              <button className="text-left w-full px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-100 rounded-md transition-colors duration-200">
                {item.label}
              </button>
            </div>
          ))}
        </div>
      </div>
    </div>
  );
};

export default MegaMenu;
